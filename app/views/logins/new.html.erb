<div class="row padding-top-form">
	<h1>Најава</h1>

	<div class="col-md-6 col-md-offset-3">
		<%= form_for '/login' do %>

			<%= label_tag :email, "Емаил" %>
			<%= email_field_tag :email %>

			<%= label_tag :password, "Лозинка" %>
			<%= password_field_tag :password %>

			<%= submit_tag 'Најави се', class: 'btn btn-primary'%>
		<% end %>

		<span class="text-gray">Нов корисник? </span><%= link_to 'Регистрирај се', register_path %>
	</div>
</div>
