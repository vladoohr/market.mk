<div class="row">
	<div class="container">
		<div class="col-md-6 col-md-offset-3">
			<%= form_for @user do |f| %>

				<%= f.label :username, "Име*" %>
				<%= f.text_field :username %>

				<%= f.label :email, "Емаил*" %>
				<%= f.email_field :email %>

				<%= f.label :phone, "Телефон" %>
				<%= f.text_field :phone %>

				<% if @user.new_record? %>

					<%= f.label :password, "Лозинка*" %>
					<%= f.password_field :password %>

					<%= f.label :password_confirmation, "Потврди лозинка*" %>
					<%= f.password_field :password_confirmation %>

				<% end %>
				
				<%= f.submit @user.new_record? ? 'Регистрирај се' : 'Промени', class: 'btn btn-primary'%>

			<% end %>

		</div>

		<hr/>
	</div>
</div>