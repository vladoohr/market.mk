<div class="paddingTop">
	<%= render 'shared/title', title: @user.username %>
	<div class="container">
		<div class="pull-left">
			<dl class="dl-horizontal">
  			<dt>Емаил:</dt>
  			<dd><%= @user.email %></dd>
  			<dt>Телефон: </dt>
  			<dd><%= @user.phone ? @user.phone : "/" %></dd>
			</dl>
		</div>

		<div class="pull-right">
			<%= link_to "Промени", edit_user_path(@user), class: "btn btn-primary"%>
		</div>
	</div>
</div>